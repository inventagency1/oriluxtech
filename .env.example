# Oriluxchain Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
BRIDGE_PORT=5001
DIFFICULTY=3

# Veralix Integration
VERALIX_URL=https://veralix.io
VERALIX_API_KEY=your_api_key_here

# Database (Optional)
POSTGRES_USER=orilux
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=oriluxchain

# Redis (Optional)
REDIS_URL=redis://redis:6379

# Security - CRITICAL: Change these values!
SECRET_KEY=your_secret_key_here_CHANGE_ME
JWT_SECRET=your_jwt_secret_here_CHANGE_ME
SUPERADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY
API_KEYS=your_api_key_1,your_api_key_2

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Blockchain Security
MAX_BLOCK_SIZE=1000000
MAX_REORG_DEPTH=10
ENABLE_SIGNATURE_VALIDATION=true
ENABLE_RATE_LIMITING=true

# Domain Configuration
DOMAIN=blockchain.veralix.io
SSL_EMAIL=admin@veralix.io

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=INFO
